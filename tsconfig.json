/**
 * 配置参数地址；https://www.html.cn/doc/typescript/doc/handbook/Compiler%20Options.html
 */
{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES5",
    "module": "ES6",
    "outDir": "lib/",
    "noImplicitAny": true,
    "declaration": true,
    "declarationDir": "./lib/@types",
    "typeRoots" : ["./src/@types"]   
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.*.ts",
    "./src/*.ts"
  ],
  "exclude": [
    "./node_modules"
  ]
}