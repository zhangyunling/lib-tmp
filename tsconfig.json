/**
 * 配置参数地址；https://www.html.cn/doc/typescript/doc/handbook/Compiler%20Options.html
 */
{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES6",
    "module": "ES6",
    "outDir": "lib/",
    "noImplicitAny": true,
    "removeComments": true, // 删除所有注释
    "skipLibCheck": true, // 忽略所有的声明文件（ *.d.ts）的类型检查。
    "noUnusedLocals": true, // 若有未使用的局部变量则抛错。
    "declaration": true
  },
  "include": [
    "./src/**/*.ts",
    "./src/*.ts"
  ],
  "exclude": [
    "./node_modules"
  ]
}